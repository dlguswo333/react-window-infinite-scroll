{
  "compilerOptions": {
    "lib": ["ES2018", "DOM"],
    "module": "ES6",
    "target": "ES2018",
    "moduleResolution": "Node",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "paths": {
      "@/*": ["./src/*"],
    },
    "types": ["vite/client"]
  },
  "include": ["src/**/*"],
}
